<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextWithStroke">
        <item name="android:textColor">@color/white</item> <!-- Цвет текста -->
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:background">@android:color/transparent</item> <!-- Фон (может быть прозрачным) -->
        <item name="android:padding">8dp</item> <!-- Отступы -->
        <item name="android:layout_margin">8dp</item> <!-- Отступы -->
        <item name="android:textStyle">bold</item> <!-- Стиль текста -->
        <item name="android:fontFamily">@font/baloo</item> <!-- Шрифт текста -->
        <item name="android:letterSpacing">0.05</item> <!-- Межсимвольное расстояние -->
        <item name="android:textAllCaps">false</item> <!-- Текст в верхнем регистре -->
        <item name="android:ellipsize">end</item> <!-- Обрезка текста -->
        <item name="android:gravity">center</item> <!-- Выравнивание текста -->
        <item name="android:shadowColor">@color/black</item> <!-- Цвет обводки -->
        <item name="android:shadowDx">1</item> <!-- Смещение по горизонтали -->
        <item name="android:shadowDy">1</item> <!-- Смещение по вертикали -->
        <item name="android:shadowRadius">2</item> <!-- Радиус обводки -->
    </style>


</resources>